<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="detail"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_20"
            app:cardElevation="@dimen/dp_10"
            android:elevation="20dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@color/white"
            android:layout_below="@+id/circle">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:layout_marginBottom="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="65dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/sfpro_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question "
                        android:textSize="@dimen/h12"
                        android:textAlignment="center"/>


                    <TextView
                        android:id="@+id/questionno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13"
                        android:fontFamily="@font/sfpro_regular"
                        android:textColor="@color/bg_color"
                        android:textSize="@dimen/h20"
                        android:textAlignment="center"/>


                    <TextView
                        android:id="@+id/totalquestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/20"
                        android:textColor="@color/bg_color"
                        android:textSize="17sp"
                        android:fontFamily="@font/sfpro_regular"
                        android:textAlignment="center"/>

                </LinearLayout>


                <org.sufficientlysecure.htmltextview.HtmlTextView
                    android:id="@+id/qstatement"
                    android:fontFamily="@font/sfpro_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:background="@color/Transparent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginBottom="40dp"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:textStyle="bold"

                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/Black"
                    android:textAlignment="center"
                    android:text="If the hour hand of clock is turned anticlockwise from 2pm to 9am, through how many degrees will it have turned ?"/>


                <ImageView
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:id="@+id/image"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>







        <RelativeLayout
            android:elevation="10dp"
            android:id="@+id/q1"
            android:layout_marginTop="35dp"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/circular_round_cornor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:textAlignment="center"
                android:id="@+id/op1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:fontFamily="@font/sfpro_bold"
                android:text="120"
                android:textColor="@color/Black"
                android:textSize="@dimen/sp_18" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/q2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/circular_round_cornor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:textAlignment="center"

                android:layout_marginEnd="@dimen/dp_25"
                android:id="@+id/op2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_25"
                android:fontFamily="@font/sfpro_bold"
                android:text="120"
                android:textColor="@color/Black"
                android:textSize="@dimen/sp_18" />




        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/q3"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/circular_round_cornor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/op3"
                android:textAlignment="center"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:fontFamily="@font/sfpro_bold"
                android:text="120"
                android:textColor="@color/Black"
                android:textSize="@dimen/sp_18" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/q4"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/circular_round_cornor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/op4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_25"
                android:fontFamily="@font/sfpro_bold"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:text="120"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="@dimen/sp_18" />




        </RelativeLayout>




    </LinearLayout>

</ScrollView>