<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UI.fragments.SummaryScreenFrag">

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/background" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you\nfor attempting the test."
            android:textSize="@dimen/h22"
            android:textColor="@color/white"
            android:fontFamily="@font/sfpro_semibold"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"/>

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="-50dp"
        app:cardCornerRadius="@dimen/dp_20"
        app:cardElevation="@dimen/dp_10"
        android:elevation="20dp"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@color/white"
        android:layout_below="@+id/bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_light"
                        android:text="Total Questions"
                        android:textAlignment="center"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/sfpro_light"
                        android:text="100"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="22sp" />


                </LinearLayout>

                <View

                    android:id="@+id/seprate"
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="11dp"
                    android:background="@drawable/line_gradient_color" />

                <LinearLayout
                    android:layout_marginStart="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_light"
                        android:text="Attempted"
                        android:textAlignment="center"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/attempted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/sfpro_light"
                        android:text="82"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="22sp" />


                </LinearLayout>

                <View

                    android:id="@+id/seprate1"
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="11dp"
                    android:background="@drawable/line_gradient_color" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_light"
                        android:text="Skipped Questions"
                        android:textAlignment="center"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/skipped"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/sfpro_light"
                        android:text="100"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="22sp" />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/layout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginEnd="@dimen/dp_20"
            android:id="@+id/back"
            android:layout_marginTop="40dp"
            android:background="@drawable/question_background"
            android:layout_gravity="center_horizontal"
            android:paddingRight="20dp"
            android:paddingLeft="@dimen/dp_20"

            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/sfpro_medium"
                android:text="Back to Test"
                android:textColor="@color/Black"
                android:textSize="16sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginStart="@dimen/dp_20"
            android:id="@+id/end"
            android:layout_marginTop="40dp"
            android:background="@drawable/circular_purple_round"
            android:layout_gravity="center_horizontal"
            android:paddingRight="20dp"
            android:paddingLeft="@dimen/dp_20"

            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/sfpro_medium"
                android:text="End Test"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_below="@+id/card"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/mobile" />



</RelativeLayout>