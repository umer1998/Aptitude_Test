<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp_20"
            app:cardElevation="@dimen/dp_10"
            android:elevation="20dp"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@color/white"
            android:layout_below="@+id/circle">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_gravity="end"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:background="@drawable/end_test"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="End Test"
                        android:fontFamily="@font/sfpro_medium"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/h12"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="45dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/sfpro_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question "
                        android:textSize="@dimen/h12"
                        android:textAlignment="center"/>


                    <TextView
                        android:id="@+id/questionno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13"
                        android:fontFamily="@font/sfpro_regular"
                        android:textColor="@color/bg_color"
                        android:textSize="@dimen/h20"
                        android:textAlignment="center"/>


                    <TextView
                        android:id="@+id/totalquestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/20"
                        android:textColor="@color/bg_color"
                        android:textSize="17sp"
                        android:fontFamily="@font/sfpro_regular"
                        android:textAlignment="center"/>

                </LinearLayout>


                <TextView
                    android:fontFamily="@font/sfpro_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:background="@color/Transparent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:textStyle="bold"
                    android:layout_marginBottom="40dp"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/Black"
                    android:textAlignment="center"
                    android:text="If the hour hand of clock is turned anticlockwise from 2pm to 9am, through how many degrees will it have turned ?"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>







        <RelativeLayout
            android:elevation="10dp"
            android:id="@+id/q1"
            android:layout_marginTop="35dp"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/question_background"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="@dimen/sp_18"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:textColor="@color/Black"
                android:fontFamily="@font/sfpro_bold"/>

            <RadioButton

                android:checked="true"
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_25" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/q2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/circular_round_cornor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="@dimen/sp_18"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:textColor="@color/Black"
                android:fontFamily="@font/sfpro_bold"/>

            <RadioButton

                android:id="@+id/r2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_25" />


        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/q3"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/circular_round_cornor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="@dimen/sp_18"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:textColor="@color/Black"
                android:fontFamily="@font/sfpro_bold"/>

            <RadioButton

                android:id="@+id/r3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_25" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/q4"
            android:layout_marginTop="20dp"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/circular_round_cornor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="@dimen/sp_18"
                android:layout_marginStart="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:textColor="@color/Black"
                android:fontFamily="@font/sfpro_bold"/>

            <RadioButton
                android:id="@+id/r4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_25" />


        </RelativeLayout>



        <RelativeLayout
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/jumptoq1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jump to Q_1"
                    android:textSize="14sp"
                    android:fontFamily="@font/sfpro_medium"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toRightOf="@+id/jumptoq1"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/circular_white_round">

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:text="Back"
                    android:textSize="14sp"
                    android:fontFamily="@font/sfpro_medium"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/next"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/jumptolast"
                android:background="@drawable/circular_purple_round">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/sfpro_medium"
                        android:text="Next: "
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/nextquestionno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/sfpro_semibold"
                        android:text="Q_13"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/jumptolast"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jump to Q_1"
                    android:textSize="14sp"
                    android:fontFamily="@font/sfpro_medium"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>